<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:targetApi="16">

    <!-- TODO add animated vector drawable(avd) instead of a common icon
    and set this file as a icon to menuItem-->
    <item android:id="@+id/state_on"
        android:drawable="@drawable/events_icon_avd"
        android:state_checked="true"/>

    <item android:id="@+id/state_off"
        android:drawable="@drawable/ic_feed"/>

    <!-- specify transitions -->
    <transition
        android:drawable="@drawable/events_icon_avd"
        android:fromId="@id/state_off"
        android:toId="@id/state_on" />

</animated-selector>