<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reaction_group"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:animateLayoutChanges="true"
    android:visibility="visible">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/comment_btn"
        app:cardBackgroundColor="@color/minor_info_secondary"
        app:cardCornerRadius="7dp"
        app:cardElevation="0dp"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="6dp"
            android:layout_marginVertical="@dimen/margin_2dp"
            android:animateLayoutChanges="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/comment_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_comment" />

            <com.teamforce.thanksapp.presentation.customViews.TextView.ShortenNumberTextView
                android:id="@+id/comment_tv_counter"
                style="@style/SmallText2Medium.Gray"
                tools:text="256"
                android:visibility="gone"
                android:layout_marginStart="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/like_btn"
        app:cardBackgroundColor="@color/minor_info_secondary"
        app:cardCornerRadius="7dp"
        app:cardElevation="0dp"
        android:layout_width="wrap_content"
        android:layout_height="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="6dp"
            android:layout_marginVertical="@dimen/margin_2dp"
            android:animateLayoutChanges="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/like_iv"
                app:tint="@color/general_contrast_secondary"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_like" />

            <com.teamforce.thanksapp.presentation.customViews.TextView.ShortenNumberTextView
                android:id="@+id/like_tv_counter"
                style="@style/SmallText2Medium.Gray"
                tools:text="2"
                android:visibility="gone"
                android:layout_marginStart="6dp"
                android:layout_marginBottom="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</LinearLayout>

