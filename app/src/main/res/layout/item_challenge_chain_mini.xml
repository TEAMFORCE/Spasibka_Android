<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainCard"
    android:layout_width="139dp"
    android:layout_height="170dp"
    android:layout_marginHorizontal="5dp"
    android:layout_marginBottom="20dp"
    android:animateLayoutChanges="true"
    android:transitionName="item_challenge"
    app:cardBackgroundColor="@color/general_background"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp">

    <ImageView
        android:id="@+id/imageBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/top_frame"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:backgroundTint="@color/transparent"
            android:elevation="0dp">

        </FrameLayout>

        <LinearLayout
            android:id="@+id/blur_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#BFFFFFFF"
            android:backgroundTintMode="src_atop"
            android:orientation="vertical"
            android:paddingHorizontal="12dp"
            android:paddingVertical="10dp">

            <TextView
                android:id="@+id/chain_title"
                style="@style/VerySmallText1Inter.Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="9dp"
                tools:text="Xnj nj " />

            <TextView
                android:id="@+id/chain_creator"
                style="@style/VerySmallText1.Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black"
                tools:text="wrgerw" />
        </LinearLayout>


    </LinearLayout>


</com.google.android.material.card.MaterialCardView>
