<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="32dp"
    android:orientation="vertical"
    tools:context=".presentation.fragment.auth.onBoarding.LastOnBoardingScreenFragment">

    <com.teamforce.thanksapp.presentation.theme.ThemableImageVIewIcon
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/onboarding_picture_2"
        android:layout_weight="4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <com.teamforce.thanksapp.presentation.theme.ThemableTextViewMainBrandColor
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            style="@style/Headline3"
            android:textColor="@color/general_brand"
            android:text="@string/onboarding_congratulations"/>

        <com.teamforce.thanksapp.presentation.theme.ThemableTextViewContrast
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:lineHeight="25dp"
            style="@style/Headline6"
            android:textColor="@color/general_contrast"
            android:text="@string/onboarding_last_screen_subtitle"/>
    </LinearLayout>



    <com.teamforce.thanksapp.presentation.theme.ThemableDefaultButton
        android:id="@+id/action_btn"
        style="@style/DefaultButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="17dp"
        android:textAllCaps="true"
        android:text="@string/onboarding_last_screen_go_to_main_screen"/>

    <com.teamforce.thanksapp.presentation.theme.ThemableSecondaryButton
        android:id="@+id/invite_btn"
        style="@style/DefaultButtonSecondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="@string/onboarding_invite_members"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"/>

</LinearLayout>