<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/main_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="16dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_anon_avatar"
            android:layout_marginBottom="8dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"/>

        <TextView
            android:id="@+id/date_offer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:letterSpacing="0.04"
            android:maxLines="1"
            android:textAppearance="@style/StandardText3.Gray"
            tools:text="#12376 Оформлен в 21:30 12.02.2022" />

        <TextView
            android:id="@+id/name_offer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:letterSpacing="0.04"
            android:maxLines="2"
            android:textAppearance="@style/StandardText3Medium.Black"
            tools:text="Дополнительные 3 дня оплачиваемого отпуска" />

        <TextView
            android:id="@+id/description_offer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:letterSpacing="0.04"
            android:maxLines="2"
            android:textAppearance="@style/StandardText4.Gray"
            tools:text="Действующее законодательство предусматривает как право" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/general_brand_secondary"
                app:cardCornerRadius="8dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/offer_price_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="3dp"
                        android:gravity="center"
                        android:letterSpacing="0.04"
                        android:textAppearance="@style/StandardText3Medium.White"
                        android:textColor="@color/general_brand"
                        tools:text="5000" />

                    <ImageView
                        android:id="@+id/currency_iv"
                        android:layout_width="12dp"
                        android:layout_height="11dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:src="@drawable/ic_currency"
                        android:textAlignment="center"
                        app:tint="@color/general_brand" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/offer_status_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/minor_success_secondary"
                app:cardCornerRadius="8dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/offer_status_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="3dp"
                        android:gravity="center"
                        android:letterSpacing="0.04"
                        android:textAppearance="@style/StandardText3Medium.White"
                        android:textColor="@color/minor_success"
                        tools:text="Получен" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>