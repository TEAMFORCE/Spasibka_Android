<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:animateLayoutChanges="true"
    app:cardBackgroundColor="@color/general_background"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/superLightGray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/general_background"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/top_frame"
            android:layout_width="match_parent"
            android:layout_height="233dp"
            android:background="@color/general_brand"
            android:layout_marginBottom="10dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/imageBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:tintMode="src_atop"
                android:visibility="visible"
                app:tint="#59000000" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|bottom"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_marginBottom="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/challenge_title"
                    style="@style/StandardText4Medium.White"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="6dp"
                    android:maxLines="2"
                    tools:text="Xnj nj " />

                <TextView
                    android:id="@+id/challenge_creator"
                    style="@style/StandardText3.White"
                    android:layout_width="205dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    tools:text="wrgerw" />
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/info_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginBottom="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lastUpdate_challenge_value"
                style="@style/SmallText2.Gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="@string/lastUpdateChallenge"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/award_linear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/award_value"
                            style="@style/StandardText4Medium.Black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="4dp"
                            tools:text="12"/>
                        <com.teamforce.thanksapp.presentation.theme.ThemableImageViewMainBrandColor
                            android:layout_width="14dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="1dp"
                            android:tint="@color/general_brand"
                            android:src="@drawable/ic_logo"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/award_text"
                        style="@style/SmallText2.Black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/challenge_list_award" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/winners_linear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/winners_value"
                            style="@style/StandardText3Medium.Black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="4dp"
                            tools:text="4"/>
                        <com.teamforce.thanksapp.presentation.theme.ThemableImageViewMainBrandColor
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_challenge"
                            android:layout_gravity="center"
                            android:layout_marginTop="1dp"
                            app:tint="@color/general_brand"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/winners_text"
                        style="@style/SmallText2.Black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/winnersCount" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/prizePool_linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/prizePool_value"
                            style="@style/StandardText3Medium.Black"
                            android:layout_marginEnd="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="14"/>

                        <com.teamforce.thanksapp.presentation.theme.ThemableImageViewMainBrandColor
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_benefit"
                            android:layout_gravity="center"
                            android:layout_marginTop="1dp"
                            app:tint="@color/general_brand"/>

                    </LinearLayout>



                    <TextView
                        android:id="@+id/prizePool_text"
                        style="@style/SmallText2.Black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/PrizePool" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>




