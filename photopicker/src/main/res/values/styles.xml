<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr format="reference" name="bottomSheetDialogTheme"/>

    <style name="TextAppearance.PhotoPicker.Button" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?pickerControlColor</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:textSize">@dimen/textSizeMedium</item>
    </style>

    <style name="Theme.Design.Light.BottomSheetDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
        <item name="bottomSheetStyle">@style/Widget.Design.BottomSheet.Modal</item>
    </style>

    <style name="PhotoPickerActionButton" parent="">
        <item name="android:backgroundTint">@color/general_brand</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="android:paddingTop">17dp</item>
        <item name="android:paddingBottom">17dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>